package com.proyecto.demo.model;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;
import java.util.Date;

@Entity
@Table(name = "roles_usuarios")
public class RolUsuario {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name = "id_rolusu", nullable = false)
    public Long idRolUsu;

    @ManyToOne
    @JoinColumn(name = "id_usuario", nullable = false)
    public Usuario usuario;

    @ManyToOne
    @JoinColumn(name = "id_roles", nullable = false)
    public Rol rol;

    @Column(name = "creado_fecha", nullable = false)
    public Date creadoFecha;

    @Column(name = "modificado_fecha", nullable = false)
    public Date modificadoFecha;

    // Constructor vac√≠o
    public RolUsuario() {
    }

    // Constructor con todos los campos
    public RolUsuario(Long idRolUsu, Usuario usuario, Rol rol, Date creadoFecha, Date modificadoFecha) {
        this.idRolUsu = idRolUsu;
        this.usuario = usuario;
        this.rol = rol;
        this.creadoFecha = creadoFecha;
        this.modificadoFecha = modificadoFecha;
    }

    // Getters y Setters
    public Long getIdRolUsu() {
        return idRolUsu;
    }

    public void setIdRolUsu(Long idRolUsu) {
        this.idRolUsu = idRolUsu;
    }

    public Usuario getUsuario() {
        return usuario;
    }

    public void setUsuario(Usuario usuario) {
        this.usuario = usuario;
    }

    public Rol getRol() {
        return rol;
    }

    public void setRol(Rol rol) {
        this.rol = rol;
    }

    public Date getCreadoFecha() {
        return creadoFecha;
    }

    public void setCreadoFecha(Date creadoFecha) {
        this.creadoFecha = creadoFecha;
    }

    public Date getModificadoFecha() {
        return modificadoFecha;
    }

    public void setModificadoFecha(Date modificadoFecha) {
        this.modificadoFecha = modificadoFecha;
    }
}